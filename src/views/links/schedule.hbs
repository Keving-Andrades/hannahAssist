
{{> header}}

{{> menu}}

<div id="taskMenu" class="taskMenu">

        <div id="taskOpts" class="taskOpts">
            <div class="taskOpts--new" id="taskOpts__new">
                <span>Crear</span>
                <div class="taskOpts--svgIcon">
                    <svg viewBox="0 0 24 24" fill="currentColor">
                        <rect fill="none" height="24" width="24"/>
                        <path d="M17,19.22H5V7h7V5H5C3.9,5,3,5.9,3,7v12c0,1.1,0.9,2,2,2h12c1.1,0,2-0.9,2-2v-7h-2V19.22z"/>
                        <path d="M19,2h-2v3h-3c0.01,0.01,0,2,0,2h3v2.99c0.01,0.01,2,0,2,0V7h3V5h-3V2z"/>
                        <rect height="2" width="8" x="7" y="9"/>
                        <polygon points="7,12 7,14 15,14 15,12 12,12"/>
                        <rect height="2" width="8" x="7" y="15"/>
                    </svg>
                </div>
            </div>
        </div>

        <div id="taskBtn" class="task_btn--add">
            <svg viewBox="0 0 24 24" width="24px" fill="currentColor">
                <path d="M0 0h24v24H0V0z" fill="none"/>
                <path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"/>
            </svg>
        </div>

    </div>
        

    <main id="main">

        <div id="main_cover"></div>

        <div class="schedule">
            <div class="newtask newtask--hide" id="newtask">
                <div class="newtask__box">
                    <span class="newtask__box--title">Crear</span>
                    <div class="newtask__box--form">
                        <form action="/schedule" method="POST" name="formTask" id="formTask">

                            <div class="newtask__form" id="newtask__formLeft">
                                <div class="required">
                                    <label class="label">Título</label>
                                    <input id="titleTask" spellcheck="false" required type="text" name="title" placeholder="Ejem. Conversatorio." minlength="4" maxlength="20">
                                </div>
    
                                <div class="required" id="ecSettings">
                                    <label class="label" id="ecSettingsTitle">Categoría</label>
                                    <div id="ecModeSelector">
    
                                        <div id="ecModeList">
                                            <div class="selectBox">
                                                <div class="optionsContainer">
    
                                                    <div class="option">
                                                        <input type="radio" class="radio" id="Tarea">
                                                        <label for="Tarea">Tarea</label>
                                                    </div>
    
                                                    <div class="option">
                                                        <input type="radio" class="radio" id="Exámen">
                                                        <label for="Exámen">Examen</label>
                                                    </div>
    
                                                    <div class="option">
                                                        <input type="radio" class="radio" id="Reunión">
                                                        <label for="Reunión">Reunión</label>
                                                    </div>
    
                                                    <div class="option">
                                                        <input type="radio" class="radio" id="Presentación">
                                                        <label for="Presentación">Presentación</label>
                                                    </div>
    
                                                    <div class="option">
                                                        <input type="radio" class="radio" id="Recordatorio">
                                                        <label for="Recordatorio">Recordatorio</label>
                                                    </div>
    
                                                </div>
                                                <div class="selectedOption" id="categoryTask">Seleccionar</div>
                                                <input type="hidden" name="category" id="categoryTask__hidden"/>
                                            </div>
                                        </div>
    
                                    </div>
                                </div>
    
                                <div class="required">
                                    <label class="label">Fecha</label>
                                    <input id="dateTask" required type="datetime-local">
                                    <input type="hidden" name="date" id="dateTask__hidden"/>
                                    <input type="hidden" name="hour" id="hourTask__hidden"/>
                                </div>
                            </div>

                            <div class="newtask__form" id="newtask__formFront">
                                <div class="required">
                                    <label class="label">Asignatura</label>
                                    <input id="courseTask" spellcheck="false" required type="text" name="course" placeholder="Ejem. Inglés." minlength="4" maxlength="20">
                                </div>
                            
                                <div class="required">
                                    <label class="label">Nota</label>
                                    <textarea id="noteTask" spellcheck="false" required name="note" placeholder="Ejem. Llevar diccionario." minlength="5" maxlength="100"></textarea>
                                </div>
                            </div>
                            
                            <div class="newtask__form--btns">
                                <div class="newtask__form--denyBtn" id="newtask__form--denyBtn">Cancelar</div>
                                <div class="newtask__form--acceptBtn" id="newtask__form--acceptBtn">Siguiente</div>
                            </div>

                            <input type="hidden" name="completedClass" id="completedClass__hidden" value="uncompleted"/>
                            <input type="hidden" name="completed" id="completed__hidden" value="Sin completar"/>
                            <input type="hidden" name="completedDetails" id="completedDetails__hidden" value="Completar"/>
                            <input type="hidden" name="idTask" id="idTask__hidden"/>
                        </form>
                    </div>
                </div>
            </div>
    
            <div id="taskList" class="taskList true">{{#if tasks}}
                    <span class="taskTitles">Sin completar</span>
                    {{#each tasks}}
                        <div taskID="{{idTask}}" id="{{idTask}}" class="taskCard">
                            <div taskID="{{idTask}}" id="{{idTask}}" class="taskCard__box">
                                <div taskID="{{idTask}}" id="taskCard__box--leftContent--{{idTask}}" class="taskCard__box--leftContent">
                                    <span taskID="{{idTask}}" id="taskCard__leftContent--titleTask--{{idTask}}">{{title}}</span>
                                    <span taskID="{{idTask}}" id="taskCard__leftContent--courseTask--{{idTask}}">{{course}}</span>
                                </div>
                                <div taskID="{{idTask}}" id="taskCard__box--rightContent--{{idTask}}" class="taskCard__box--rightContent">
                                    <span taskID="{{idTask}}" id="taskCard__rightContent--dateTask--{{idTask}}">{{date}}</span>
                                    <span taskID="{{idTask}}" id="taskCard__rightContent--categoryTask--{{idTask}}">{{category}}</span>
                                    <span taskID="{{idTask}}" id="taskCard__rightContent--completedTask--{{idTask}}" class="{{completedClass}}">{{completed}}</span>
                                </div>
                            </div>
                        </div>
                    {{/each}}
                {{/if}}
                {{#if tasksCompleted}}
                    <span class="taskTitles">Completadas</span>
                    {{#each tasksCompleted}}
                        <div taskID="{{idTask}}" id="{{idTask}}" class="taskCard">
                            <div taskID="{{idTask}}" id="{{idTask}}" class="taskCard__box">
                                <div taskID="{{idTask}}" id="taskCard__box--leftContent--{{idTask}}" class="taskCard__box--leftContent">
                                    <span taskID="{{idTask}}" id="taskCard__leftContent--titleTask--{{idTask}}">{{title}}</span>
                                    <span taskID="{{idTask}}" id="taskCard__leftContent--courseTask--{{idTask}}">{{course}}</span>
                                </div>
                                <div taskID="{{idTask}}" id="taskCard__box--rightContent--{{idTask}}" class="taskCard__box--rightContent">
                                    <span taskID="{{idTask}}" id="taskCard__rightContent--dateTask--{{idTask}}">{{date}}</span>
                                    <span taskID="{{idTask}}" id="taskCard__rightContent--categoryTask--{{idTask}}">{{category}}</span>
                                    <span taskID="{{idTask}}" id="taskCard__rightContent--completedTask--{{idTask}}" class="{{completedClass}}">{{completed}}</span>
                                </div>
                            </div>
                        </div>
                    {{/each}}
                {{/if}}</div>

            <div id="noTask" class="no_task">
                <div class="no_taskYet">
                    <div class="no_taskYet--text">¡No tienes ninguna tarea agendada todavía!</div>
                </div>
                <div class="add_taskMsg">
                    <div class="add_taskMsg--text">Presiona el botón + para agregar una tarea.</div>
                </div>
            </div>
        </div>

    </main>